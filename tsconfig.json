{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@contexts/*": ["src/contexts/*"],
            "@utils/*": ["src/contexts/*"],
            "@assets/*": ["assets/*"],
            "@services/*": ["services/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
